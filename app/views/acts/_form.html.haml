= form_for @act do |f|
  - if @act.errors.any?
    #error_explanation
      %h2= "#{pluralize(@act.errors.count, "error")} prohibited this act from being saved:"
      %ul
        - @act.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :bot_say
    = f.text_field :bot_say
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :lesson
    = f.text_field :lesson
  .actions
    = f.submit 'Save'
